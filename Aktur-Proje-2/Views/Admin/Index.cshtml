
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using EntityLayer.Concrete
@model List<User>

<h1>Kullanıcı Listesi</h1>
<table class="table  table-bordered text-center">
    <tr>
        <th>ID</th>
        <th>İsim</th>
        <th>Soyisim</th>
        <th>Departman</th>
    
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ID</th>
            <th>@item.Name</th>
            <td>@item.Surname</td>
            <td>@item.Department</td>

            <td><a href="/Admin/DeleteUser/@item.ID"  class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/UpdateUser/@item.ID"  class="btn btn-warning">Düzenle</a></td>

        </tr>
    }
</table>
<a href="/Admin/AddUser" class="btn btn-primary">Yeni Blog Oluştur</a>