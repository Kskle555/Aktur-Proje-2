
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model EntityLayer.Concrete.User

@using (Html.BeginForm("UpdateUser", "Admin", FormMethod.Post))
{



    @Html.Label("ID")
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })

    <br />

    @Html.Label("AD")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />

    @Html.Label("Surname")
    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })

    <br />

    @Html.Label("Departman")
    @Html.TextBoxFor(x => x.Department, new { @class = "form-control" })

    <br />
  
    <br />
    <button class="btn btn-success">Güncelle</button>
}

